@using CuoreRosso.Models
@model AccountViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}
<style type="text/css">
    span.helper-text {
        color: amber lighten-5;
    }

    .card-content .row .col .col {
        padding-left: 0;
    }

        .card-content .row .col .col label {
            left: 0;
        }

    .cuore {
        background-color: amber;
    }

    .row {
        margin-bottom: auto;
    }

    main {
        display: flex;
    }

        main .container {
            margin: auto auto;
        }
</style>
<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 m10 push-m1 l8 push-l2">
                @using (Html.BeginForm())
                {
                    <div class="card amber lighten-5">
                        <div class="card-content black-text">
                            <div class="card-title cuore"><img src="images/CuoreRosso-transp.png" width="40%" class="animated pulse" /></div>
                            <div class="card-title">Crie sua conta CuoreRosso</div>
                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">textsms</i>
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "autocomplete validate" } })
                                    @Html.LabelFor(m => m.FirstName)
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "helper-text" })
                                    <span class="helper-text" data-error="wrong">Helper text</span>

                                </div>
                                <div class="input-field col s6">
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "autocomplete validate" } })
                                    @Html.LabelFor(m => m.LastName)
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "helper-text" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "autocomplete validate" } })
                                    @Html.LabelFor(m => m.Email)
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "helper-text" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s11">
                                    <div class="input-field col s6">
                                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "autocomplete validate" } })
                                        @Html.LabelFor(m => m.Password)
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "helper-text" })

                                    </div>
                                    <div class="input-field col s6">
                                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "autocomplete validate" } })
                                        @Html.LabelFor(m => m.ConfirmPassword)
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "helper-text" })
                                    </div>
                                    <span class="helper-text" data-error="wrong" data-success="right">A senha deve ter mais de 8 caracteres com pelo menos 1 letra maiúscula, 1 letra minúscula e 1 número</span>
                                </div>
                                <div class="input-field col s1">
                                    <i class="material-icons">
                                        visibility
                                    </i>
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn waves-effect waves-light col push-s8" type="submit" name="action">
                                    Próxima
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                        <div class="card-action">
                            <a href="#">This is a link</a>
                            <a href="#">This is a link</a>
                        </div>
                    </div>
                }
            </div>
        </div>



    </div>
</div>
